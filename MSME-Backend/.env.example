# =============================================================================
# MSME Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# Application
APP=dev
NODE_ENV=development
PORT=3001
APP_URL=http://localhost:3001

# =============================================================================
# SECURITY - REQUIRED
# =============================================================================

# JWT Secret - REQUIRED: Generate a strong secret key
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars

# JWT Token Expiry (optional, has defaults)
JWT_ADMIN_EXPIRY=8h      # Admin token expiry (default: 8h)
JWT_USER_EXPIRY=24h      # User token expiry (default: 24h)

# Email Secret
EMAIL_SECRET=your_email_secret_here

# =============================================================================
# DATABASE
# =============================================================================

DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=msme_db
DB_USER=root
DB_PASSWORD=

# Connection Pool (optional, has defaults)
DB_POOL_MAX=10           # Maximum connections (default: 10)
DB_POOL_MIN=2            # Minimum connections (default: 2)

# =============================================================================
# EMAIL - App Emails (Registration, OTP, etc.)
# =============================================================================

MAIL_HOST=gmail
MAIL_PORT=465
MAIL_SECURE=true
MAIL_AUTH_USER=your_email@gmail.com
MAIL_AUTH_PW=your_gmail_app_password
MAIL_FROM_STRING="MSME Eswatini <your_email@gmail.com>"

# =============================================================================
# EMAIL - Admin Error Notifications
# =============================================================================

ADMIN_MAIL_AUTH_USER=your_email@gmail.com
ADMIN_MAIL_AUTH_PW=your_gmail_app_password
ADMIN_ERROR_EMAILS=admin1@example.com,admin2@example.com
ERROR_NOTIFICATION_RATE_LIMIT_MINUTES=15

# =============================================================================
# INITIAL ADMIN SETUP (for seed script)
# =============================================================================
# These are used by: npm run seed:admin
# Leave blank to use auto-generated values

ADMIN_EMAIL=admin@msme.gov.sz
ADMIN_NAME=System Admin
# ADMIN_PASSWORD=             # Leave empty to auto-generate secure password
